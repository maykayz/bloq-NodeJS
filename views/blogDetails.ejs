<% include ./partials/header %>
<!--Blog Details Starts Here-->
   <div class="blogsContainer">
        <% if(bloginfo.body){ %>
        <% var block = bloginfo.body; %>
        <% var paragraph = block.split('\n'); %>
        <div class="ui segment">
        <!--edit delete menu-->
        <div class="ui small basic icon buttons right floated">
          <a class="ui button" href="/blogs/<%=bloginfo._id%>/edit"><i class="edit icon"></i></a>
          <a class="ui button" onclick="deleteAlert()" href="#endPoint"><i class="trash icon"></i></a>
        </div>
        <!--edit delete menu ends-->
        <div class="ui hidden divider"></div>
        <h2 class="ui center aligned header">
            <%= bloginfo.title %>
        </h2>
        <div class="ui clearing divider"></div>
        <div class="sub header center aligned"><%=bloginfo.date %></div>
        
          <img class="ui fluid image" src="<%=bloginfo.image %>">
           <div class="ui clearing divider"></div>
            <% paragraph.forEach(function(para){ %>
                <p><%=para%></p>
            <% }) %>
            
        </div>
        <%}%>
       <div id="endpoint"></div>
        <!-- Alert message-->
        <div class="ui warning hidden message" id="deleteMessage">
          <div class="ui grid">
          
              <div class="ten wide column">
                <div class="header">
                    You are deleting the post!
                  </div>
                  Are you sure you want to delete this post?
              </div>
              <div class="six wide column">
                  <form action="/blogs/<%=bloginfo._id%>?_method=DELETE" method="POST">
                      <button class="ui negative button" type="submit">
                      Delete
                      </button>
                      <a class="ui button" onclick="cancelAlert()">
                          Cancel
                      </a>
                  </form>
                
              </div>
          </div>
        </div>
          

          
           
   </div>
    
<!--Blog Details Ends Here-->
<% include ./partials/footer %>